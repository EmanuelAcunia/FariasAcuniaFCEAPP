<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".vistas.FceFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:text="Mision"
            android:textColor="#131212"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:text="Formar profesionales competentes, con pensamiento crítico, iniciativa emprendedora, vocación científica y compromiso social, a través de un proyecto educativo centrado en el estudiante e inspirado en las exigencias regionales, nacionales e internacionales."
            android:textColor="#554D4D"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:text="Vision"
            android:textColor="#131212"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Somos una institución transformadora comprometida con la ética, centrada en los estudiantes, y de referencia en lo académico, en la gestión, en la investigación y en la extensión, que forma egresados reconocidos dentro y fuera la de argentina."
            android:textColor="#554D4D"
            android:textSize="18sp" />
    </LinearLayout>

</FrameLayout>